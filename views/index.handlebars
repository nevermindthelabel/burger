<div class="container" id="header">
  <div class="row">
    <div class="col-md-12">
      <h1>Devour the Burgers!</h1>
    </div>
  </div>
</div>
<div class="container" id="background">
  <div class="row">
    <div class="col-md-6">
      <h2>Burgers that you'd like to devour</h2>
      {{#each burgers}}
      {{#unless this.devoured}}
      <p>{{this.burger_name}}</p>
      <form action="/api/burgers" method="PUT">
        <button class="btn btn-primary" type="submit" name="action" id="{{this.id}}">Devour
          {{this.burger_name}} </button>
      </form>
      {{/unless}}
      {{/each}}
      <br />

      <h3>Add a burger to devour!</h3>
      <form class="create-burger" action="/api/burgers" method="POST">
        <div class="form-group">
          <label for="burger">Burger to add:</label>
          <input type="text" id='burger' name="name">
        </div>
        <button type="submit">Add your burger</button>
      </form>
    </div>
    <div class="col-md-6">
      <h2>Burgers that have already been devoured:</h2>
      <ul>
        {{#each burgers}}
        {{#if this.devoured}}
        <h5>{{this.burger_name}}</h5>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>